#!/bin/sh

git status > /dev/null 2>&1
if [ $? -eq 0 ]; then
    cat << "EOS"
        _ _   _
   __ _(_| |_(_) __ _ _ __   ___  _ __ ___
  / _` | | __| |/ _` | '_ \ / _ \| '__/ _ \
 | (_| | | |_| | (_| | | | | (_) | | |  __/
  \__, |_|\__|_|\__, |_| |_|\___/|_|  \___|
  |___/___| | __|___/_ _  __| (_)_ __   __ _
 | '__/ _ | |/ _ \ / _` |/ _` | | '_ \ / _` |
 | | |  __| | (_) | (_| | (_| | | | | | (_| |_ _ _
 |_|  \___|_|\___/ \__,_|\__,_|_|_| |_|\__, (_(_(_)
                                       |___/
EOS
    git rm -r --cached .
    git add .
    git commit -m ".gitignore is reloaded."
    git push origin master
    cat << "EOS"
             _
 __/\__   __| | ___  _ __   ___  __/\__
 \    /  / _` |/ _ \| '_ \ / _ \ \    /
 /_  _\ | (_| | (_) | | | |  __/ /_  _\
   \/    \__,_|\___/|_| |_|\___|   \/

EOS

else
    cat << "EOS"
  _   _  ___ _____ _   _ ___ _   _  ____
 | \ | |/ _ \_   _| | | |_ _| \ | |/ ___|
 |  \| | | | || | | |_| || ||  \| | |  _
 | |\  | |_| || | |  _  || || |\  | |_| |
 |_| \_|\___/ |_| |_| |_|___|_| \_|\____|
   __ _(_) |_   _ __ ___ _ __   ___
  / _` | | __| | '__/ _ \ '_ \ / _ \
 | (_| | | |_  | | |  __/ |_) | (_) | _ _
  \__, |_|\__| |_|  \___| .__/ \___(_|_|_)
  |___/                 |_|

EOS

fi